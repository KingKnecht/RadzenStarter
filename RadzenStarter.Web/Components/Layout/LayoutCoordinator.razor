@using Radzen
@using Radzen.Blazor
@rendermode InteractiveServer

<CascadingValue Value="@this">
	<RadzenHeader>
		<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" JustifyContent="JustifyContent.SpaceBetween" Style="width: 100%;">
			<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
				<RadzenSidebarToggle Click="@ToggleSidebar" />
				<RadzenLabel Text="DbTest" Style="margin-left: 1rem;" />
			</RadzenStack>
			<RadzenLink Text="About" Path="https://learn.microsoft.com/aspnet/core/" Target="_blank" Style="margin-right: 1rem;" />
		</RadzenStack>
	</RadzenHeader>
	<RadzenSidebar @bind-Expanded="@SidebarExpanded">
		<RadzenPanelMenu>
			<RadzenPanelMenuItem Text="Home" Icon="home" Path="" />
			<RadzenPanelMenuItem Text="Counter" Icon="add_box" Path="counter" />
			<RadzenPanelMenuItem Text="Weather" Icon="list" Path="weather" />
		</RadzenPanelMenu>
	</RadzenSidebar>
</CascadingValue>

<RadzenNotification />
<RadzenDialog />
<RadzenContextMenu />
<RadzenTooltip />

@code {
	public bool SidebarExpanded { get; set; } = true;

	public void ToggleSidebar()
	{
		SidebarExpanded = !SidebarExpanded;
	}
}